<h1>All Books</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Published Date</th>
          <th>Unique Identifier</th>
          <th>Publisher Name</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title  %></td>
            <td><%= book.author %></td>
            <td><%= book.date %></td>
            <td><%= book.identifier %></td>
            <td><%= book.publisher %></td>
            <td><%= link_to "Edit", edit_book_path(book)  %></td>
            <td><%= link_to "Delete", book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to "Add a New Book", new_book_path  %>

<br>
<br>

<h3>Import Books</h3>
<%= form_tag import_books_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Upload Books" %>
<% end %>

